<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--progress_reach_height  进度到达的高度-->
    <!--progress_reach_color  进度到达的颜色-->
    <!--progress_unreach_height  进度未到达的高度-->
    <!--progress_unreach_color  进度未到达的颜色-->
    <!--progress_text_size  进度文本的尺寸-->
    <!--progress_text_color  进度文本的颜色-->
    <!--progress_text_offset  表示文本与进度条之间的偏移量-->

    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_reach_height" format="dimension" />
        <attr name="progress_reach_color" format="color" />
        <attr name="progress_unreach_height" format="dimension" />
        <attr name="progress_unreach_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_offset" format="dimension" />
    </declare-styleable>

    <!--progress_reach_height  进度到的宽度-->
    <!--progress_reach_color  进度到的颜色-->
    <!--progress_unreach_height  进度未到的宽度-->
    <!--progress_unreach_color  进度未到的颜色-->
    <!--progress_text_size  进度文本的尺寸-->
    <!--progress_text_color  进度文本的颜色-->
    <!--progress_radio  绘制的半径-->

    <declare-styleable name="RoundProgressBar">
        <attr name="progress_reach_height" format="dimension" />
        <attr name="progress_reach_color" format="color" />
        <attr name="progress_unreach_height" format="dimension" />
        <attr name="progress_unreach_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_radio" format="dimension" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>
</resources>